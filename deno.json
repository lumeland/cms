{
  "lock": false,
  "tasks": {
    "update-deps": "deno run -A 'https://deno.land/x/nudd@v0.2.10/cli.ts' update 'deps/*.ts' deno.json core/templates/layout.ts static/components/u-bar.js storage/github.ts",
    "build-libs": "cd scripts && npm run build"
  },
  "imports": {
    "dom": "https://cdn.jsdelivr.net/gh/oscarotero/dom@0.1.10/dom.js",
    "cropper": "https://cdn.jsdelivr.net/npm/cropperjs@2.0.1/dist/cropper.esm.js"
  },
  "unstable": [
    "fmt-component",
    "temporal"
  ],
  "lint": {
    "rules": {
      "exclude": [
        "no-import-prefix"
      ]
    }
  },
  "exclude": [
    "probas",
    "static/libs",
    "CHANGELOG.md",
    "node_modules",
    "scripts"
  ]
}
